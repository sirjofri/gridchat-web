#!/bin/rc

rfork

fn log{
	echo $* >[1=2]
}

fn sigkill{
	echo KILL >[1=2]
	test -d /proc/$catpid && echo kill >/proc/$catpid/note
	test -d /proc/$lstpid && echo kill >/proc/$lstpid/note
	sleep 1
	test -d /proc/$catpid && echo kill >/proc/$catpid/ctl
	test -d /proc/$lstpid && echo kill >/proc/$lstpid/ctl
	exit
}

fn copybins{
	log copy binaries...
	bins=(\
		echo\
		rc-httpd/handlers\
		date\
		read\
		sed\
		awk\
		test\
		urlencode\
		ls\
		file\
		cat\
		bc\
		dd\
		mkdir\
		bind\
		aux/listen\
	)
	for(i in $bins)
		cp /bin/$i /tmp/bin/$i
	log done copying
}

ramfs
mkdir -p /tmp/bin/^(rc-httpd aux)
log bind `{pwd}^/bin
bind -b `{pwd}^/bin /tmp/bin
copybins
bind -b /tmp/bin /bin
mkdir -p /tmp/www
cat <<EOF >/tmp/www/robots.txt
User-agent: *
Disallow: /
EOF

if(! test -r /n/chat/chat){
	log /n/chat/chat not available!
	exit 'chat not available'
}
log cat chat buffer
cat /n/chat/chat > /tmp/www/chat.buf &
catpid=$apid

bind -a /n/chat /tmp/www

log running `{pwd}^/srv-http
aux/listen1 -t 'tcp!*!8080' `{pwd}^/srv-http &
lstpid=$apid

wait
